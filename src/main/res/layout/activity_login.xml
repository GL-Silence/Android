<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".LogAndMain.ActivityLogin"
    >
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:background="@mipmap/taobao1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="130dp"
        />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="80dp"
        android:gravity="center"
        >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="#131212"
                android:textSize="25sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_username"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/et_username"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_password"
                    android:text="@string/tv_password"
                    android:textSize="20sp"
                    android:textColor="#000000"

                    />
                <EditText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_password"
                    android:hint="@string/et_password"
                    android:inputType="textPassword"
                    android:singleLine="true"

                    />
            </LinearLayout>

          /*
            *android:orientation="horizontal"设置排列方式
            *horizontal：水平排列
            *vertical:垂直排列
            **/
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/bt_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bt_log"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/bt_bos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bt_bos"
                    android:gravity="center"
                    />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>